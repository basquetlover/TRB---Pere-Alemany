{
    "cleanUrls": true,
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*)", "status": 404, "dest": "404.html" }
    ],
    "headers": [
      {
        "source": "/(.*).(png|jpg|jpeg|avif|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
        {
          "source": "/index",
          "destination": "/index.html"
        },
        {
          "source": "/recursos",
          "destination": "/recursos.html"
        }
      ],
      "scripts": {
        "build": "[my-framework] build --output public"
      }
  }